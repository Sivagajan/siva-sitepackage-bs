{
  "name": "siva-sitepackage",
  "version": "1.0.0",
  "description": "Buildprocess for Siva Sitepackage",
  "main": "index.js",
  "scripts": {
    "bootstrap:css": "sass --quiet --quiet-deps --style=expanded --source-map ./SCSS/Bootstrap/Custom.scss ../Resources/Public/CSS/styles.css",
    "minify:bootstrap": "postcss ../Resources/Public/CSS/styles.css -o ../Resources/Public/CSS/styles.min.css --map --use cssnano",
    "build:css": "npm run bootstrap:css && npm run minify:bootstrap",
    "lint:css": "npx stylelint --fix ./SCSS/Bootstrap/Custom/*.scss",
    "build:js": "webpack --mode=production",
    "js:watch": "webpack --watch",
    "lint:js": "eslint ./JS/*.js --fix"
  },
  "keywords": [],
  "author": "Sivagajan Karunanathan",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.4",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.2",
    "cssnano": "^7.0.5",
    "eslint": "^9.9.1",
    "postcss": "^8.4.44",
    "postcss-cli": "^11.0.0",
    "postcss-loader": "^8.1.1",
    "postcss-scss": "^4.0.9",
    "sass": "^1.77.8",
    "sass-loader": "^16.0.1",
    "style-loader": "^4.0.0",
    "stylelint": "^16.9.0",
    "stylelint-config-recommended-scss": "^14.1.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.5.1",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3"
  }
}
